<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:id="@+id/lst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:background="@drawable/border">
        <!--android:background="#7E62A3">-->

    <ImageButton
            android:text="Play"
            android:src="@android:drawable/ic_media_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/myPlayRecord"
            android:background="@drawable/border"/>
    <!--android:layout_weight="1"-->

    <!--android:src="@android:drawable/ic_media_stop"-->
    <!--tools:src="@drawable/media_stop"-->

    <ImageButton
            android:text="Stop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/myStropPlayRec"
            android:src="@android:drawable/ic_delete"
            android:background="@drawable/border"/>
    <TextView
            android:id="@+id/list_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:paddingLeft="16dp"
            android:text="SOME@string/title"
            android:layout_weight="1"
            android:textStyle="bold"
            app:autoSizeTextType="uniform"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>

    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/myShareButton"
            android:src="@android:drawable/ic_menu_share"
            android:background="@drawable/border"/>

    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/myDeleteButton"
            android:src="@android:drawable/ic_menu_delete"
            android:background="@drawable/border"/>
    <!--<TextView-->
    <!--android:id="@+id/list_description"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="left"-->
    <!--android:paddingLeft="16dp"-->
    <!--android:text="SOME@string/description"/>-->

</LinearLayout>